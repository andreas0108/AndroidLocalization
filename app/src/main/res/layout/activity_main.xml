<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context="id.zone.andreas_ardi.mylocalization.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="19dp"
            android:hint="@string/form_text "
            android:padding="8dp"
            android:text="Fill in this form to register as user" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView6"
            android:layout_marginBottom="16dp"
            android:ems="10"
            android:hint="@string/form_nama "
            android:inputType="textPersonName"
            android:padding="8dp"
            android:text="Full Name" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText"
            android:layout_marginBottom="16dp"
            android:ems="10"
            android:hint="@string/form_emal "
            android:inputType="textEmailAddress"
            android:padding="8dp"
            android:text="Email Address" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText4"
            android:layout_marginBottom="16dp"
            android:ems="10"
            android:hint="@string/form_pswd "
            android:inputType="textPassword"
            android:padding="8dp"
            android:text="Password" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText2"
            android:layout_marginBottom="16dp"
            android:ems="10"
            android:hint="@string/form_phon "
            android:inputType="phone"
            android:padding="8dp"
            android:text="Phone Number" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText3"
            android:checked="false"
            android:duplicateParentState="false"
            android:hint="@string/form_ceck "
            android:text="I have read and agree the terms" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/checkBox"
            android:layout_marginTop="14dp"
            android:hint="@string/btn_sbmit "
            android:text="SUBMIT" />

    </RelativeLayout>
</LinearLayout>
